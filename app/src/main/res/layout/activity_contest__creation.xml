<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.sourabh.wifi_demo.Contest_Creation">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/con_name"
        android:hint="Contest name"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/con_password"
        android:layout_marginTop="48dp"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/con_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Set a password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/con_details"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/con_password"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:hint="Enter contest details"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Create"
        android:id="@+id/con_create"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="con_create_click"/>
    
</RelativeLayout>
